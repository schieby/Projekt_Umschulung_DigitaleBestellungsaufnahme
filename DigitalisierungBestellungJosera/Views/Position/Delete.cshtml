@model DigitalisierungBestellungJosera.Models.Position

@{
    ViewData["Title"] = "Delete";
}

<h1>Position Löschen</h1>

<h3>Sind Sie sich sicher, dass Sie die Tour löschen möchten?</h3>
<div>
    <h4>Position</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stückzahl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stückzahl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bestellung)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bestellung.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produkt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produkt.Id)
        </dd>
    </dl>
    
    <form class="link" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a class="link" asp-action="Index">Zurück</a>
    </form>
</div>
