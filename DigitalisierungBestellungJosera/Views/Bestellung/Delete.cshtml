@model DigitalisierungBestellungJosera.Models.Bestellung

@{
    ViewData["Title"] = "Delete";
}

<h1>Bestellung löschen</h1>

<h3>Sind Sie sich sicher, dass Sie die Tour löschen möchten?</h3>
<div>
    <h4>Bestellung</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BestellungsNr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BestellungsNr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bestelldatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bestelldatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kunde)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kunde.Vorname)
            @Html.DisplayFor(model => model.Kunde.Name)
        </dd>
        <dt class="col-sm-2">
            Adresse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kunde.PLZ)
            @Html.DisplayFor(model => model.Kunde.Ort)
            @Html.DisplayFor(model => model.Kunde.Straße)
            @Html.DisplayFor(model => model.Kunde.Nr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tour.Name)
        </dd>
    </dl>
    
    <form class="link" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a class="link" asp-action="Index">Zurück</a>
    </form>
</div>
