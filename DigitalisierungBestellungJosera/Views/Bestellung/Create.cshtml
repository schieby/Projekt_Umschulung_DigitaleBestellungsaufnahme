            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label"></label>
                <select asp-for="TourId" class ="form-control" asp-items="ViewBag.TourId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BestellungsNr" class="control-label"></label>
                <input asp-for="BestellungsNr" class="form-control" />
                <span asp-validation-for="BestellungsNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bestelldatum" class="control-label"></label>
                <input asp-for="Bestelldatum" class="form-control" />
                <span asp-validation-for="Bestelldatum" class="text-danger"></span>
            </div>
            

